{
  "name": "copilot-mcp",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "@octokit/rest": "latest",
    "jsonwebtoken": "latest",
    "zod": "latest",
    "zod-to-json-schema": "latest"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.2",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
